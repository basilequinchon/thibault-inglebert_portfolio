<div class="login-container col-sm-10 col-lg-4 mx-auto mt-5">
  <div class="d-flex align-items-center">
    <div class='nav-line message-line-left'></div>
    <h2 class='log-in__title'>SE CONNECTER</h2>
    <div class='nav-line message-line'></div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs my-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: 'Email',
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: 'Mot de passe',
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label: 'Se souvenir de moi', class: 'souvenir' if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex align-items-center">
      <div class='nav-line message-line-left'></div>
      <%= f.button :submit, "Se connecter", class: 'btn-tibo-primary' %>
      <div class='nav-line message-line'></div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
