<div class="show-project-card" data-delay="0">
  <div id="carousel-thumb<%= @project.id %>" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel" data-interval="false" data-delay="0">
        <!--Slides-->
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <% if @project.photos.first.video? %>
          <%= cl_video_tag @project.photos.first.key, controls: true, overlay: {font_family: "arial", font_size: 100, text: "PropriÃ©tÃ© de Thibault Inglebert" }, color: "#ffffff20", width: 1000 %>
        <% else %>
          <%= cl_image_tag @project.photos.first.key, alt: "#{@project.id}-0", class: 'd-block' %>
        <% end %>
      </div>
      <% @project.photos[1..-1].each_with_index do |photo, index| %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key, alt: "#{@project.id}-#{index}", class: 'd-block', quality: 'auto:eco', fetch_format: :auto, width: 1000 %>
        </div>
      <% end %>
    </div>
      <i class="far fa-times-circle"></i>
    <!--Controls-->
    <% unless @project.photos.first.video? %>
      <div class="description d-flex mx-auto">
        <div class="description__project"><%= @project.description %> </div>
        <div class='description__client'><%= @project.client %></div>
      </div>
      <a class="carousel-control-prev" href="#carousel-thumb<%= @project.id %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-thumb<%= @project.id %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

      <!--/.Controls-->
      <ol class="carousel-indicators">
        <li data-target="#carousel-thumb<%= @project.id %>" data-slide-to="<%= 0 %>" class="active">
          <%= cl_image_tag @project.photos.first.key, alt: "#{@project.id}-0", class: 'd-block w-100 img-fluid', quality: 'auto:low', fetch_format: :auto, width: 80 %>
        </li>
        <% @project.photos[1..-1].each_with_index do |photo, index| %>
        <li data-target="#carousel-thumb<%= @project.id %>" data-slide-to="<%= index + 1%>">
          <%= cl_image_tag photo.key, alt: "#{@project.id}-#{index}", class: 'd-block w-100 img-fluid', quality: 'auto:low', fetch_format: :auto, width: 80 %>
        </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>
