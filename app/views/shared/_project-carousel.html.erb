<div class="show-project-card" data-delay="0">
  <div id="carousel-thumb<%= @project.id %>" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel" data-delay="0">
        <!--Slides-->
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img class="d-block" src="<%= cl_image_path @project.photos.first.key %>" alt="<%= "#{@project.id}-0" %>">
      </div>
      <% @project.photos[1..-1].each_with_index do |photo, index| %>
        <div class="carousel-item">
          <img class="d-block" src="<%= cl_image_path photo.key %>" alt="<%= "#{@project.id}-#{index}" %>">
        </div>
      <% end %>
    </div>
    <!--Controls-->
    <a class="carousel-control-prev" href="#carousel-thumb<%= @project.id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-thumb<%= @project.id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->
    <ol class="carousel-indicators">
      <li data-target="#carousel-thumb<%= @project.id %>" data-slide-to="<%= 0 %>" class="active"> <img class="d-block w-100" src="<%= cl_image_path @project.photos.first.key %>"
          class="img-fluid"></li>
      <% @project.photos[1..-1].each_with_index do |photo, index| %>
      <li data-target="#carousel-thumb<%= @project.id %>" data-slide-to="<%= index + 1%>"> <img class="d-block w-100" src="<%= cl_image_path photo.key %>"
          class="img-fluid"></li>
      <% end %>
    </ol>
  </div>
</div>
